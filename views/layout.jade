doctype html
html(lang="en")

	head
		title Pidela.info
		link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.5/flatly/bootstrap.min.css", rel="stylesheet")
		link(href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.9.1/bootstrap-table.min.css", rel="stylesheet")
		link(href="styles/app.css", rel="stylesheet")

	body
		.navbar.navbar-default.navbar-fixed-top(role="navigation")
			.container
				.navbar-header
					button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-collapse")
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href="#") Pidela.info
				.navbar-collapse.collapse
					ul.nav.navbar-nav
						li.active
							a(href="#") Inicio
						li
							a(href="#about") Acerca
						li
							a(href="#contact") Contacto
						li.dropdown
							a.dropdown-toggle(href="#", data-toggle="dropdown") Más info
								span.caret
							ul.dropdown-menu(role="menu")
								li
									a(href="#") link1
								li
									a(href="#") link2
								li
									a(href="#") link3
								li.divider
								li.dropdown-header Otros links
								li
									a(href="#") link4
								li
									a(href="#") link5
					ul.nav.navbar-nav.navbar-right
						li
							a(href="//wordpress.com") link6
						li
							a(href="//calypso.com") link7
						li
							a(href="#",data-toggle="modal",data-target="#cta-form-holder") Envía una pregunta
		div.container-fluid.app-holder

		block content

		#cta-form-holder.modal.fade(tabindex='-1',role='dialog',aria-labelledby='enviaTuPregunta')
			.modal-dialog(role='document')
				.modal-content
					.modal-header
						button.close(type='button',data-dismiss='modal',aria-label='Close')
							span(aria-hidden='true') ×
						h4#enviaTuPregunta.modal-title Envía tu pregunta a una entidad
					.modal-body
						form#ctaForm
							.form-group
								label(for='ctaFormAgency') Entidad del Estado&times;
								select#ctaFormAgency.form-control(name='agencyId')
									option(value='') Elija una
							.form-group
								label(for='ctaFormAuthor') Email&times; (nunca lo usaremos para publicidad)
								input#ctaFormAuthor.form-control(type='email',placeholder='Email',name='author')
							.form-group
								label(for='ctaFormTitle') Título&times; (mínimo 5 carácteres, máximo 52)
								input#ctaFormTitle.form-control(type='text',placeholder='Título',name='title')
							.form-group
								label(for='ctaContent') Mensaje&times; (mínimo 40 carácteres, máximo 400)
								textarea#ctaFormContent.form-control(rows='3',placeholder='Mensaje',name='content')
							.form-group
								p.collapse.js-ctaFormErrorMessage Por favor revisa los campos
								p.collapse.js-ctaFormSuccessMessage Tu pregunta fue enviada
							button.btn.btn-default(type='submit') Enviar

	script(src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")
	script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js")
	script(src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.9.1/bootstrap-table.min.js")
	script(src="scripts/app.js")
	block scripts